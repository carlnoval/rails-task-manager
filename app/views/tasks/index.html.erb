<%# using bootstrap margin %>
<h1 class="m-3">Tasks List</h1>

<% @tasks.each do |task| %>
  <%# this list uses bootstrap list group %>
  <ul class="list-group list-group-flush">
    <li class="list-group-item py-0"><i class="far fa-<%= task.completed ? "check-square" : "square" %>"></i>
    <%= link_to task.title, task_path(task), class: "tasks-title" %>
    </li>
  </ul>
<% end %>
